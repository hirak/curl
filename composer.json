{
    "name": "spindle/httpclient",
    "description": "simple wrapper for ext-curl, multi-request enabled",
    "authors": [
        {
            "name": "Hiraku NAKANO",
            "email": "hiraku@tojiru.net"
        }
    ],
    "scripts": {
        "test": "phpunit"
    },
    "license": "CC0-1.0",
    "require": {
        "php": ">=5.3.0",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "Spindle\\HttpClient\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "pdepend/pdepend": "*",
        "hirak/apigen2.8.0": "*"
    },
    "archive": {
        "exclude": [
            "tests/",
            "builds/",
            "gulpfile.js",
            "apigen.neon",
            "phpunit.xml.dist",
            "phpunit.xml",
            "package.json"
        ]
    }
}
